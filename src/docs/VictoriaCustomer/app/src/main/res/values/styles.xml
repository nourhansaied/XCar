    <style name="rounded_radio_selector">
        <item name="android:background">@drawable/selector_pink_button</item>
        <item name="android:ems">4</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/selector_text_color_gray_white</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/sp_11</item>
    </style>

    <style name="rounded_tip_selector">
        <item name="android:background">@drawable/selector_tips</item>
        <item name="android:ems">4</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/selector_text_color_gray_white</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/sp_11</item>
    </style>

    <style name="my_ride_selector">
        <item name="android:background">@drawable/selector_my_ride</item>
        <item name="android:ems">4</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/selector_text_color_pink_white</item>
        <item name="android:button">@null</item>
    </style>

    <style name="my_ride_selector_past_ride">
        <item name="android:background">@drawable/selector_my_ride_past_ride</item>
        <item name="android:ems">4</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/selector_text_color_pink_white</item>
        <item name="android:button">@null</item>
    </style>

    <style name="full_screen_dialog" parent="@style/Theme.AppCompat">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="dialog_animation_fade">
        <item name="android:windowEnterAnimation">@anim/fade_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_dialog</item>
    </style>

    <style name="calenderHeaderMyAppointment" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_pink</item>
        <item name="android:textSize">@dimen/sp_20</item>

        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="calenderMyAppointmentDay" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="calenderMyAppointmentWeek" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <!--<item name="android:layout_margin">@dimen/dp_4</item>-->

        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

</resources>
