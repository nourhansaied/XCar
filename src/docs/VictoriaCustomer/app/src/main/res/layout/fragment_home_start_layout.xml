    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageService2"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_25"
        android:padding="@dimen/dp_4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imagViewCircularMenu"
        app:layout_constraintStart_toStartOf="@+id/frameLayoutBottom"
        app:srcCompat="@drawable/type_2_car_1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewService2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_15"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center"
        android:padding="@dimen/dp_6"
        android:text="@string/service_2"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imagViewCircularMenu"
        app:layout_constraintStart_toEndOf="@+id/imageService2"
        app:layout_constraintTop_toTopOf="@+id/imageService2" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageService3"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageService2"
        app:layout_constraintEnd_toStartOf="@+id/textViewServiceName4"
        app:layout_constraintStart_toStartOf="@+id/frameLayoutBottom"
        app:layout_constraintTop_toTopOf="@+id/frameLayoutBottom"
        app:srcCompat="@drawable/type_4_car_1" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewServiceName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center"
        android:padding="@dimen/dp_6"
        android:rotation="35"
        android:text="@string/service_3"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/textViewService2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/frameLayoutBottom"
        app:layout_constraintTop_toTopOf="@+id/frameLayoutBottom" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imageService4"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:padding="@dimen/dp_4"
        app:layout_constraintBottom_toTopOf="@+id/textViewServiceName4"
        app:layout_constraintCircle="@id/imagViewCircularMenu"
        app:layout_constraintCircleAngle="355"
        app:layout_constraintCircleRadius="@dimen/dp_158"
        app:layout_constraintEnd_toStartOf="@+id/imagViewCircularMenu"
        app:srcCompat="@drawable/service_airport" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewServiceName4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="center"
        android:padding="@dimen/dp_6"
        android:rotation="90"
        android:text="@string/service_4"
        android:textColor="@color/white"
        app:layout_constraintCircle="@id/imagViewCircularMenu"
        app:layout_constraintCircleAngle="358"
        app:layout_constraintCircleRadius="@dimen/dp_95"
        app:layout_constraintEnd_toStartOf="@+id/imagViewCircularMenu"
        app:layout_constraintTop_toBottomOf="@+id/imagViewCircularMenu" />


    <android.support.constraint.Group
        android:id="@+id/group3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="textViewServiceName4,imageService4,textViewServiceName3,imageService3,imageService2,textViewService2,frameLayoutBottom" />


</android.support.constraint.ConstraintLayout>