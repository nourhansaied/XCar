<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/include"
                layout="@layout/toolbar_with_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:elevation="@dimen/dp_4"
                app:cardElevation="@dimen/dp_6"
                app:cardPreventCornerOverlap="false"
                app:layout_constraintTop_toBottomOf="@+id/include">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_12">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageViewPickup"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_16"
                        app:layout_constraintBottom_toBottomOf="@+id/editTextPickupLocation"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/editTextPickupLocation"
                        app:srcCompat="@drawable/pickup_big" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/editTextPickupLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:drawableTint="@color/gray"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="@string/hint_pickup_location"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/dp_16"
                        android:selectAllOnFocus="true"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text_blue"
                        android:textColorHint="@color/text_blue"
                        android:textSize="@dimen/sp_16"
                        android:theme="@style/EditTextTheme"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/imageViewPickup"
                        app:layout_constraintTop_toTopOf="parent" />


                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageViewDropoff"
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_marginStart="@dimen/dp_16"
                        app:layout_constraintBottom_toBottomOf="@+id/editTextDropoffLocation"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/editTextDropoffLocation"
                        app:srcCompat="@drawable/dropoff_big" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/editTextDropoffLocation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:drawablePadding="@dimen/dp_8"
                        android:drawableTint="@color/gray"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="start"
                        android:hint="@string/where_to"
                        android:lines="1"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/dp_16"
                        android:singleLine="true"
                        android:text=""
                        android:imeOptions="actionDone"
                        android:textAlignment="viewStart"
                        android:textColor="@color/text_blue"
                        android:textColorHint="@color/text_blue"
                        android:textSize="@dimen/sp_16"
                        android:theme="@style/EditTextTheme"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toEndOf="@+id/imageViewDropoff"
                        app:layout_constraintTop_toBottomOf="@+id/editTextPickupLocation"
                        app:layout_constraintVertical_bias="0.0" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/buttonGoNext"
                        android:layout_width="@dimen/dp_45"
                        android:layout_height="@dimen/dp_45"
                        android:layout_gravity="end"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:background="@drawable/drawable_round_pink"
                        android:scaleType="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/editTextDropoffLocation"
                        app:srcCompat="@drawable/type_2_car_1" />
                </android.support.constraint.ConstraintLayout>


            </android.support.v7.widget.CardView>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <FrameLayout
                android:id="@+id/frameLayoutMapSelectLocation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_8"
                android:background="@color/text_lightest_grey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

            </FrameLayout>


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageViewCenterPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/frameLayoutMapSelectLocation"
                app:layout_constraintVertical_bias="0.5"
                app:srcCompat="@drawable/pickup_big" />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonDone"
                style="@style/button_pink_rounded"
                android:layout_marginBottom="@dimen/dp_16"
                android:text="@string/mdtp_done_label"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>


    <TextView
        android:id="@+id/textViewAncherView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/anchor_offset"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_anchor="@id/textViewAncherView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewAncherView">


