                        android:textColor="@color/text_light_grey"
                        app:layout_constraintEnd_toEndOf="@+id/textViewLabelWork"
                        app:layout_constraintStart_toStartOf="@+id/textViewLabelWork"
                        app:layout_constraintTop_toBottomOf="@+id/textViewLabelWork" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/imageViewDeleteWork"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginEnd="@dimen/dp_16"
                        android:tint="@color/text_blue"
                        app:layout_constraintBottom_toBottomOf="@+id/textViewWork"
                        app:layout_constraintEnd_toEndOf="parent"
