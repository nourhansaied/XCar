/**
*Method to draw path
*/

public void drawPickUpPath(double latitude, double longitude) {

        try {
            final LatLng pickupLocation = new LatLng(latitude, longitude);
            final LatLng latLng = new LatLng(currentLocation.getLatitude(), currentLocation.getLongitude());
            drawRoute.drawPath(Arrays.asList(latLng, pickupLocation)
                    , startBitmap, destinationBitmap
                    , new DrawRoute.OnDrawComplete() {
                        @Override
                        public void onComplete() {
                            Marker startMarker = drawRoute.getStartMarker();
//                            startMarker.setRotation(drawRoute.getBearing());
                            mapNavigator.setCurrentMarker(startMarker);
                            mapNavigator.startNavigation();

                        }
                    });

        } catch (NumberFormatException e) {
            e.printStackTrace();
        } catch (Exception e) {
            e.printStackTrace();
        }



    }



/**
*Inside OnMapReady
*/

	drawRoute = new DrawRoute(googleMap, getActivity());
        mapNavigator = new MapNavigator(locationManager, mMap);
        mapNavigator.setPathUpdateListener(drawRoute);

        polyline = this.mMap.addPolyline(new PolylineOptions());
	
	if (locationManager.getLastLocation() != null) {

            currentLocation = locationManager.getLastLocation();
            drawPickUpPath(trainerLatitude, trainerLongitude);
        }
